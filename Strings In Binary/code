/*
https://www.hackerearth.com/problem/algorithm/strings-in-binary/
*/
#include<bits/stdc++.h>
using namespace std;
void solve(){
    int n;
    cin>>n;
    string s;
    cin>>s;
    int ans=0;
    for(char c:s)c=='1'?ans++:0;
    cout<<ans*(ans-1)/2<<"\n";
}
int main(){
    int n;
    cin>>n;
    while(n--)
        solve();
    return 0;
    }
